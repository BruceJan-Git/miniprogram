.carrousel image {
  width: 100%;
  height: 100%;
}

.carrousel swiper {
  display: block;
  height: 380rpx;
}


.activity {
  position: relative;
  margin: 5px 2px 2px;
  border: 1px solid #ccc;
  border-radius: 10px;
  background-color: rgba(28, 7, 173, .1);
}

.pro_detail {
  margin: 0px 2px 5px;
  border: 1px solid #ccc;
  border-radius: 10px;
}

.activity view:nth-child(2) {
  border-bottom: 1rpx solid #fff;
  padding: 15rpx 5rpx;
  color: #007aff;
  font-weight: 500;
  font-size: 32rpx;
}

.activity image {
  position: absolute;
  width: 96rpx;
  height: 25rpx;
  right: 10px;
  margin-top: 7px;
}

.activity swiper {
  margin-left: 10rpx;
  width: 100%;
  height: 190rpx;
}

.activity swiper swiper-item {
  overflow: hidden;
  will-change: transform;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.activity swiper text {
  display: block;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 32rpx;
}

.activity swiper text::before {
  display: inline-block;
  content: '■';
  padding-right: 12rpx;
}

.activity swiper .timer {
  position: absolute;
  right: 16rpx;
}

