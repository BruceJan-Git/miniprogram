/* 首页商品模块 */
.title {
  background-color: #dfddef;
  padding: 15rpx 10rpx;
  border-radius: 10px 10px 0 0;
  height: 30px;
  line-height: 30px;
  border-bottom: 1rpx solid #fff;
}

.title view:nth-child(1) {
  color: #007aff;
  font-weight: 500;
  font-size: 32rpx;
}

.title image {
  position: relative;
  width: 96rpx;
  height: 25rpx;
  left: 618rpx;
  top: -38px;
}


.produc {
  display: flex;
  flex: 100%;
  background-color: rgba(28, 7, 173, .1);
  flex-wrap: wrap;
  margin-left: 2rpx;
  margin-right: 2rpx;
}

.produc .item {
  width: 50%;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
  overflow: hidden;
  border-bottom: 0.5rpx solid #fff;
}

.produc .item:nth-child(odd) {
  border-right: 0.5rpx solid #fff;
}

.produc image {
  width: 100%;
}

.box .goods-item {
  padding: 10rpx;
  font-size: 14px;
}

.box .goods-item text {
  padding: 5rpx 0;
}

.box .goods-item .name {
  font-weight: 500;
  display: block;
}

.box .goods-item .desp {
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 12px;
  color: #666;
}

.box .goods-item .stor,
.box .goods-item .sell,
.box .goods-item .overplus {
  font-size: 12px;
  color: #666;
  margin-right: 12rpx;
}