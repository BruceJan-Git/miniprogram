/* miniprogram/pages/home/home.wxss */
.carrousel {
  height: 360rpx;
}

.carrousel image {
  width: 100%;
  height: 100%;
}

.activity {
  position: relative;
  margin: 10px 2px;
  border: 1px solid #ccc;
  border-radius: 10px;
  background-color: rgba(28, 7, 173, .1);
}

.activity view:nth-child(2) {
  border-bottom: 1px solid #fff;
  padding: 10px 5px;
}

.activity image {
  position: absolute;
  width: 96rpx;
  height: 25rpx;
  right: 10px;
  margin-top: 7px;
}

.activity swiper {
  margin-left: 10px;
  width: 100%;
  height: 50px;
  line-height: 50px;
}

.produc {
  display: flex;
  width: 100%;
  background-color: rgba(28, 7, 173, .1);
}

.produc view:nth-child(1) {
  flex: 1;
  width: 50%;
  border: 1px solid #ccc;
}
