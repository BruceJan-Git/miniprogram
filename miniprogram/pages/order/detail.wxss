/* miniprogram/pages/order/detail.wxss */
.detail image {
  width: 100%;
  /* height: 100%; */
}

.meta {
  padding: 10rpx 10rpx;
  background-color: #fff;

}

.detail text {
  font-size: small;
  color: #666;
}

.detail .name {
  display: block;
  font-weight: 500;
  font-size: inherit;
  color: black;
}

.desc {
  display: block;
  margin: 12rpx 0;
}

.count,
.sell,
.overplus {
  padding-right: 100rpx;
}

form {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.choose {
  width: 100%;
  height: 180rpx;
  line-height: 100rpx;
}

.btn text {
  margin: 0 30rpx;
}

.btn text:nth-child(1),
.btn text:nth-child(3) {
  display: inline-block;
  /* width: 16px;
  height: 16px; */
  /* width: 39rpx;
  height: 39rpx; */
  color: #fff;
  width: 30rpx;
  height: 45rpx;
  line-height: 45rpx;
  border-radius: 5rpx;
  text-align: center;
  background-color: blueviolet;
}

.btn view {
  text-align: right;
  padding-right: 20rpx;
}

button {
  margin: 20rpx 0;
}