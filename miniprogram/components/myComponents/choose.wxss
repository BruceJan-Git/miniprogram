form {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.choose {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}

.btn text {
  margin: 0 30rpx;
}

.btn text:nth-child(1),
.btn text:nth-child(3) {
  display: inline-block;
  color: #fff;
  width: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 5rpx;
  background-color: blueviolet;
}

button {
  margin-top: 20rpx;
}